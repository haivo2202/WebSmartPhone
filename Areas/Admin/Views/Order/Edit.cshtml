@model Order

@{
    ViewData["Titel"] = "Edit Order";
    Layout = "_Layout1";
}
<h4>Edit Order</h4>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Ngày Mua</label>
            <input asp-for="CreatedAt" class="form-control" />
            <span asp-validation-for="CreatedAt" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Address</label>
            <input asp-for="ShippingAddress" class="form-control" />
            <span asp-validation-for="ShippingAddress" class="text-danger" />
        </div>

        <div class="form-group">
            <label>PhoneNumber</label>
            <textarea asp-for="ReceiverPhoneNumber" class="form-control"> </textarea>
            <span asp-validation-for="ReceiverPhoneNumber" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Note</label>
            <input asp-for="Note" class="form-control" />
            <span asp-validation-for="Note" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Total</label>
            <input asp-for="GrandTotal" class="form-control" />
            <span asp-validation-for="GrandTotal" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Status</label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger" />
        </div>

     


        <div class="form-group">
            <button class="btn btn-primary" asp-action="Edit" asp-controller="Order">Update</button>
        </div>
    </form>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
