@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
    Layout = "_Layout1";
}
<h3>List Products</h3>
<a asp-action="Create" asp-controller="Product">Add Product</a>
<table class="table">
    <thead>
        <tr>

            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Product Category</th>
            <th scope="col">Product Brand</th>
            <th scope="col">Product Model</th>
            <th scope="col">Product Status</th>
            <th scope="col">Product Manage</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr border>


                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>@item.Price đ</td>
                <td><img src="~/assets/image/@item.Image" width="120" /></td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>@item.Model.Name</td>
                <td>
                    @if (item.Status == true)
                    {
                        <span class="text text-success">Còn Hàng</span>
                    }
                    else
                    {
                        <span class="text text-danger">Hết Hàng</span>
                    }
                </td>


                <td>
                    <a asp-action="Edit" class="btn-danger btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn-warning btn-sm confirmDeletion" asp-controller="Product" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }


    </tbody>
</table>