@model ProductModel

@{
    ViewData["Titel"] = "Edit Product";
    Layout = "_Layout1";
}
<h4>Edit Product</h4>
<div class="col-md-13">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control"> </textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Category</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option> --Choose a Category-- </option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Brand</label>
            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                <option> --Choose a Brand-- </option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger" />
        </div>


        <div class="form-group">
            <label>Model</label>
            <select asp-for="ModelId" class="form-control" asp-items="ViewBag.Models">
                <option> --Choose a Model-- </option>
            </select>
            <span asp-validation-for="ModelId" class="text-danger" />
        </div>

        <div class="form-group row">
            <div class="col-sm-7 col-xs-12">
                <div class="checkbox-fade fade-in-primary">
                    <label>
                        <input type="checkbox" asp-for="Status" checked="Status" />
                        <span class="cr"><i class="cr-icon icofont icofont-ui-check txt-primary"></i></span>
                        <span class="text-inverse">Active</span>
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label>Image</label>
            <input asp-for="ImageUpload" class="form-control" />
            <span asp-validation-for="ImageUpload" class="text-danger" />
            <img id="imgpreview" class="pt-2" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Update</button>
        </div>
    </form>
    <a asp-action="Index">Back to List Product </a>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("#ImageUpload").change(function () {
            readURL(this);
        })

    </script>
}
