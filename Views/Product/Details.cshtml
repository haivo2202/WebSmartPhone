@{
	Layout = "LayoutCart1";
}

	<section class="menu-bar">
		<div class="container">
			@Html.Partial("_SidebarPartial")
		</div>
	</section>

<div class="row">
	<div class="col-sm-6 padding-right mx-auto">
		<div class="product-details">
			<!--product-details-->
			<div class="col-sm-5">
				<div class="view-product">
					<img src="~/assets/image/@Model.Image" alt="" />
				</div>
			</div>
			<div class="col-sm-7">
				<div class="product-information">
					<!--/product-information-->
					<h2>@Model.Name</h2>
					<span>
						<span> @Model.Price.000.000 VNĐ</span>
						<button type="button" class="btn btn-fefault cart">
							<a asp-action="Add" asp-controller="Cart" asp-route-Id="@Model.Id">
								<i class="fa fa-shopping-cart"></i>
								Add to cart
							</a>
						</button>
					</span>
					@if (@Model.Status == false)
					{
						<p><b>Availability:</b> Hết Hàng</p>
					}
					else
					{
						<p><b>Availability:</b> Còn Hàng</p>
					}
					<p><b>Model:</b> @Model.Model.Name</p>
					<p><b>Brand:</b> @Model.Brand.Name</p>
					<p><b>Category:</b> @Model.Category.Name</p>
					<a href=""><img src="images/product-details/share.png" class="share img-responsive" alt="" /></a>
				</div><!--/product-information-->
			</div>
		</div><!--/product-details-->

		<div class="category-tab shop-details-tab">
			<!--category-tab-->
			<div class="col-sm-12">
				<ul class="nav nav-tabs">
					<li class="active"><a href="#details" data-toggle="tab">Details</a></li>
				</ul>
			</div>
			<div class="tab-content">
				<div class="tab-pane fade active in" id="details">
					@Model.Description
				</div>
			</div><!--/category-tab-->
		</div>
	</div>
</div>
