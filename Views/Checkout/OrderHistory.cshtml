@{
	Layout = "Layout_CheckOut";
}
@using Microsoft.AspNetCore.Identity
@using Project_PhoneStore.Areas.Identity
@using Project_PhoneStore.Models
@using Project_PhoneStore.Models.ViewModels
@model IEnumerable<Order>

<h1>Lịch Sử Mua Hàng</h1>
<section id="cart_items">
	<div class="container">
		<div class="table-responsive cart_info">
			<table class="table table-condensed">
				<thead>
					<tr class="cart_menu">
						<td class="image">UserName</td>
						<td class="quantity">Status</td>
						<td class="price">Ngày Đặt Hàng</td>
						<td class="total">Tổng Cộng</td>
						<td></td>
					</tr>
				</thead>
				<tbody>
	
					@foreach (var item in Model)
					{
						<tr>
							<td class="cart_product">
								<a href="">@item.Name</a>
							</td>
							<td class="cart_quantity">
								<p>@item.Status</p>
							</td>
							<td class="cart_price">
								<p>@item.CreatedAt</p>
							</td>
							<td class="cart_total">
								<p class="cart_total_price">@item.GrandTotal.ToString().000.000 VNĐ</p>
							</td>

						</tr>
					}
			
				</tbody>

			</table>
		</div>
	</div>
</section>
